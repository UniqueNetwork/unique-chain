{
	"exclude": [
		"**/node_modules"
	],
	"ts-node": {
		"transpileOnly": true
    },
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2022",
		"declaration": true,
		"checkJs": false,
		"strict": true,
		"resolveJsonModule": true
	},
	"include": [
		"./**/*.ts"
	]
}
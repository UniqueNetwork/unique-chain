version: "3.5"

services:
  node-dev:
    build:
      args:
        - "RUST_TOOLCHAIN={{ RUST_TOOLCHAIN }}"
        - "NETWORK={{ NETWORK }}"
        - "GIT_PRIVATE_CREDENTIALS={{ GIT_PRIVATE_CREDENTIALS }}"
      context: ../
      dockerfile: .docker/Dockerfile-chain-dev
    image: node-dev
    container_name: node-dev
    expose:
      - 9944
    ports:
      - 127.0.0.1:9944:9944
    logging:
      options:
        max-size: "1m"
        max-file: "3"
    command: cargo run --release --features={{ NETWORK }}-runtime -- --dev -linfo --rpc-cors=all --unsafe-rpc-external
